    "react-smooth-scrollbar": "7.2.0",
    "redux": "3.6.0",
    "redux-actions": "0.13.0",
    "redux-thunk": "2.1.0",
    "sass-mq": "3.3.2",
    "what-input": "4.0.3"
  },
