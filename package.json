{
  "name": "marco.solazzi.me",
  "description": "Marco Solazzi Personal Website",
  "version": "2.0.0",
  "license": "MIT",
  "author": {
    "name": "Marco Solazzi"
  },
  "contributors": [],
  "main": "app/assets/js/app.js",
  "engines": {
    "node": "^6.9.0"
  },
  "scripts": {
    "start": "npm run clean && npm run copy && npm run modernizr && node ./scripts/webpack-server.js",
    "server": "node ./scripts/server.js",
    "copy": "shx cp ./app/assets/favicons/*.* ./public/ && mkdir -p ./public/assets/pdf/ && shx cp ./app/assets/pdf/*.pdf ./public/assets/pdf/",
    "test": "jest --config ./config/jest.config.json",
    "webpack": "cross-env NODE_ENV=development webpack --config ./config/webpack.dev.js --color --hide-modules",
    "webpack:production": "cross-env NODE_ENV=production webpack --config ./config/webpack.prod.js --color -p --hide-modules",
    "modernizr": "cross-env NODE_ENV=development node ./scripts/modernizr",
    "modernizr:production": "cross-env NODE_ENV=production node ./scripts/modernizr",
    "clean": "rimraf ./public/*",
    "build": "npm run clean && npm run copy && npm run modernizr && npm run webpack",
    "build:production": "npm run clean && npm run copy && npm run lint && npm run modernizr:production && npm run webpack:production",
    "eslint": "eslint -c ./app/assets/js/.eslintrc.json \"./app/assets/js/**/*.js\"",
    "stylelint": "stylelint './app/assets/**/*.scss' --config .stylelintrc.json",
    "lint": "npm run eslint && npm run stylelint",
    "deploy": "npm run build:production && surge public --domain marco.solazzi.me"
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "babel-runtime": "6.23.0",
    "classnames": "2.2.5",
    "gsap": "1.19.1",
