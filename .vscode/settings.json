{
  "eslint.validate": ["javascript", "astro", "typescript"],
  "[js]": {
    "editor.formatOnSave": false
  },
  "[ts]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "stylelint.validate": ["css", "html", "astro"]
}
