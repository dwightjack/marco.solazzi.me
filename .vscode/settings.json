{
  "eslint.validate": ["javascript", "astro", "typescript"],
  "[js]": {
    "editor.formatOnSave": false
  },
  "[ts]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "stylelint.validate": ["css", "postcss", "html", "astro"]
}
