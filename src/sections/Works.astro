---
import { NAV_PATH_WORKS } from '../shared/constants';
import Card from '../components/Card.astro';
import Page from '../components/Page.astro';
import PageSection from '../components/PageSection.astro';
import Stack from '../components/Stack.astro';
import works from '../database/works.json';
---

<Page id={NAV_PATH_WORKS} mark="作品">
  <PageSection title="works" subtitle="Latest projects">
    <Stack space={5}>
      {
        works.map(({ project, id, href, meta, ...entry }) => (
          <Card
            titleLabel="project"
            title={project}
            data={entry}
            href={href}
            meta={meta}
            id={`portfolio-works-${id}`}
          />
        ))
      }
    </Stack>
  </PageSection>
</Page>
