---
import LinkList from '../components/LinkList.astro';
import Icon from '../components/Icon.astro';
import { NAV_PATH_JOBS, NAV_PATH_HOME } from '../shared/constants';
import links from '../database/links.json';
import Avatar from '../components/Avatar/Avatar.astro';
import marco from '../assets/images/marco.jpg';
import Page from '../components/Page.astro';
---

<Page id={NAV_PATH_HOME} indent={false} mark="初め">
  <section class="c-cover">
    <div class="c-cover__pic">
      <Avatar foreground={marco} />
    </div>
    <div class="c-cover__body">
      <h2 lang="ja" class="c-cover__headline">こんにちは！</h2>
      <article class="c-cover__text">
        <p>My name is <b>Marco Solazzi</b></p>
        <p>
          I am a {new Date().getFullYear() - 1979}yo <b>Frontend Developer</b> /
          <b>UX Engineer</b>, technical <b>writer</b> and <b>speaker</b> from Verona
          (Italy). Living in Tokyo. I speak Italian (of course), English, Japanese
          and some French.
        </p>
        <p>
          Since 2014 I am co-founder and host of the <b
            ><a
              href="http://www.fevr.it"
              target="_blank"
              rel="noopener noreferrer">FEVR Frontenders Meetup</a
            >
          </b> .
        </p>
      </article>
      <footer class="c-cover__footer">
        <LinkList items={links} />
      </footer>
    </div>
    <a href={`#${NAV_PATH_JOBS}`} class="c-cover__scrollhint">
      <span>Get to know me</span>
      <span class="c-cover__scrollhint-ico">
        <Icon name="chevron-double-down" size={1.5} />
      </span>
    </a>
  </section>
</Page>

<style>
  .c-cover {
    padding: var(--space-page-gutter-block) var(--space-page-gutter-inline);

    @media (--viewport-tablet-landscape) {
      display: grid;
      grid-template-areas: '. . .' 'pic body .' 'scrollhint scrollhint scrollhint';
      grid-template-columns: 28vw 36rem 1fr;
      grid-template-rows: 1fr auto 1fr;
      align-items: center;
      block-size: 100vh;
      padding: 0;
      overflow: hidden;
      column-gap: 5rem;
    }
  }

  .c-cover__pic {
    inline-size: 56%;
    margin-inline: auto;

    @media (--viewport-tablet-landscape) {
      grid-area: pic;
      justify-self: end;
      inline-size: calc(100% - 4.6875vw);
      margin-inline: 0;
    }
  }

  .c-cover__body {
    grid-area: body;
  }

  .c-cover__body > * + * {
    margin-block-start: 3.75rem;
  }

  .c-cover__headline {
    margin-block-start: 0.5em;
    font-family: inherit;
    font-size: var(--text-heading-font-size-x3);
    text-align: center;

    @media (--viewport-tablet-landscape) {
      margin-block-start: 0;
      font-size: var(--text-heading-font-size-x3mq);
      text-align: start;
    }
  }

  .c-cover__text {
    position: relative;
    font-size: var(--text-body-font-size-x3);
  }

  .c-cover__text::before {
    content: '\201c';
    position: absolute;
    opacity: 0.5;
    color: var(--color-link);
    font-family: 'Times New Roman', Times, serif;
    font-size: 2.5em;
    inset-block-start: -0.35em;
    inset-inline-start: -0.55em;

    @media (--viewport-tablet-landscape) {
      font-size: 4em;
    }
  }

  .c-cover__text > * + * {
    margin-block-start: 0.8em;
    line-height: 1.4;
  }

  .c-cover__scrollhint {
    display: flex;
    grid-area: scrollhint;
    flex-direction: column;
    align-self: end;
    margin-block-end: 6vh;
    opacity: 0.8;
    color: var(--color-text);
    font-size: 1rem;
    text-align: center;
    text-decoration: none;
    gap: 1em;
    justify-self: center;
    will-change: transform;
  }

  .c-cover__scrollhint-ico {
    transition: transform 0.25s ease-out;
  }

  @media (--pointer-mouse) {
    .c-cover__scrollhint:hover .c-cover__scrollhint-ico {
      transform: translateY(50%);
    }
  }

  .c-cover__scrollhint:focus-visible .c-cover__scrollhint-ico {
    transform: translateY(50%);
  }
</style>
