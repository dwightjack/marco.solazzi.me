---
import Card from '../components/Card.astro';
import Page from '../components/Page.astro';
import PageSection from '../components/PageSection.astro';
import { NAV_PATH_EDUCATION } from '../shared/constants';
import education from '../database/education.json';
import Stack from '../components/Stack.astro';
---

<Page id={NAV_PATH_EDUCATION} mark="勉強">
  <PageSection title="education" subtitle="Learning never ends">
    <Stack space={5}>
      {
        education.map(({ id, title, ...entry }) => (
          <Card
            titleLabel="title"
            title={title}
            data={entry}
            id={`education-${id}`}
          />
        ))
      }
    </Stack>
  </PageSection>
</Page>
