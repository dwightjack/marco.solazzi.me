---
import Stack from './Stack.astro';

export interface Props {
  id: string;
}

const { id } = Astro.props;
---

<Stack class="c-page" id={id} space={15}>
  <slot />
</Stack>
<style>
  .c-page:is(.c-stack) {
    padding-inline: var(--space-page-gutter-inline);
  }

