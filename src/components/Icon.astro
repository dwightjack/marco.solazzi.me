---
import { Sprite } from 'astro-icon';
import { toStyleVars } from '../shared/utils';
export interface Props {
  name: string;
  size?: number;
}

const { name, size } = Astro.props;
const iconName = name.includes(':') ? name : `mdi:${name}`;
---

<Sprite
  class="c-icon"
  name={iconName}
  aria-hidden="true"
  focusable="false"
  style={toStyleVars({ size })}
/>

<style>
  @layer components {
    .c-icon {
      --size: 1;

      display: inline-block;
      flex-shrink: 0;
      inline-size: 1em;
      font-size: calc(var(--size) * 1em);
      vertical-align: middle;
      aspect-ratio: 1;
    }
  }
</style>
