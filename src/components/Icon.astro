---
import { Sprite } from 'astro-icon';
export interface Props {
  name: string;
  size?: number;
}

const { name, size } = Astro.props;
const iconName = name.includes(':') ? name : `mdi:${name}`;
---

<Sprite
  class="c-icon"
  name={iconName}
  aria-hidden="true"
  focusable="false"
  style={size ? `--size: ${size}` : ''}
/>

<style>
  .c-icon {
    --size: 1;

    vertical-align: middle;
    display: inline-block;
    width: 1em;
    height: 1em;
    font-size: calc(var(--size) * 1em);
  }

