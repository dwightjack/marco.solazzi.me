---
import Icon from './Icon.astro';
import Stack from './Stack.astro';

interface Item {
  icon: string;
  href: string;
  label: string;
}

export interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<Stack as="ul" space={1} class="c-link-list">
  {
    items.map(({ icon, href, label }) => (
      <li
        class:list={[
          'c-link-list__item',
          {
            'u-only-print': icon.includes('link'),
            'u-only-screen': icon.includes('pdf'),
          },
        ]}
      >
        <Icon name={icon} size={1.4} />
        <a href={href} target="_blank" rel="noopener noreferrer">
          {label}
        </a>
      </li>
    ))
  }
</Stack>

<style>
  .c-link-list__item {
    line-height: 1.4em;
  }

  @media (--viewport-wide) {
    .c-link-list__item {
      font-size: 1.125rem;
    }
  }
</style>
