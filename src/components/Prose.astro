---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends HTMLTag = 'div'> = Polymorphic<{
  as: Tag;
}>;

const { as: Tag = 'div' } = Astro.props;
---

<Tag class="c-prose">
  <slot />
</Tag>
<style is:global>
  @layer components {
    .c-prose {
      max-inline-size: 80ch;
      font-size: var(--text-body-font-size-x2);

      p,
      :not(li) > :where(ul, ol),
      table,
      hr,
      blockquote,
      pre,
      figure,
      h1,
      h2,
      h3,
      h4,
      h5 {
        margin-block: 1.5rem 0;
      }

      h1,
      h2,
      h3,
      h4,
      h5 {
        font-family: var(--text-heading-font-family);
        font-weight: normal;
      }

      h1 {
        margin-block: 1.5rem;
        font-size: var(--text-heading-font-size-x3);
        line-height: 1.4;
      }

      h2 {
        margin-block: 1.5rem;
        font-size: var(--text-heading-font-size-x2);
      }

      h3 {
        font-size: var(--text-heading-font-size-xl);
      }

      h4 {
        font-size: var(--text-heading-font-size-mq);
      }

      h5 {
        font-size: var(--text-heading-font-size);
      }

      :is(blockquote, figure) > * {
        margin-block-start: 0;
      }

      small,
      .small {
        font-size: var(--text-subheading-font-size);
      }

      .small {
        h2 {
          margin-block: 1.5rem 0;
          font-size: var(--text-heading-font-size-mq);
        }

        h3,
        h4,
        h5 {
          font-size: var(--text-heading-font-size);
        }
      }

      pre {
        padding: var(--space-2);
        font-size: 0.95em;
        tab-size: 2;
      }

      :not(pre) > code {
        padding: 0.2em;
        background-color: color-mix(in oklch, currentcolor, transparent 92%);
        font-size: 0.95em;
      }

      figure {
        margin-inline: 0;
      }

      figcaption {
        padding-block-start: var(--space-1);
        font-size: 0.9em;
        font-style: italic;

        blockquote + & {
          margin-inline: var(--space-4);
        }
      }

      blockquote,
      figure.pullquote {
        margin-inline: var(--space-4);
        padding-block: var(--space-2);
        padding-inline-start: var(--space-3);
        font-size: 1.15em;
        border-inline-start: 8px solid var(--box-color-border);
      }

      img {
        display: block;
        block-size: auto;
        max-inline-size: 100%;
      }

      table {
        inline-size: 100%;
        border-collapse: collapse;
        border: 0;
      }

      th,
      td {
        padding-block: var(--space-2);
        border-width: 0 0 1px;
        border-style: solid;
        border-color: color-mix(in oklch, currentcolor, transparent 80%);
        font-size: inherit;

        &:not([align]) {
          text-align: start;
        }
      }

      hr {
        border: 1px solid color-mix(in oklch, currentcolor, transparent 80%);
      }

      em {
        font-style: italic;
      }

      :where(:not(h1, h2, h3, h4, h5)) em {
        font-weight: 700;
      }

      b {
        font-weight: 700;
      }

      dfn {
        font-style: italic;
        font-weight: 700;
      }

      & > header {
        margin-block-end: 4rem;
        padding-block-end: var(--space-2);
        border-block-end: 1px solid
          color-mix(in oklch, currentcolor, transparent 80%);
      }

      & > footer {
        margin-block-start: var(--space-4);
        padding-block-start: var(--space-2);
        font-size: var(--text-subheading-font-size);
        border-block-start: 1px solid
          color-mix(in oklch, currentcolor, transparent 80%);
      }

      .astro-code {
        border-inline-start: 8px solid var(--box-color-border);
      }

      @media (prefers-color-scheme: dark) {
        .astro-code,
        .astro-code span {
          background-color: var(--shiki-dark-bg) !important;
          color: var(--shiki-dark) !important;

          /* Optional, if you also want font styles */
          font-style: var(--shiki-dark-font-style) !important;
          font-weight: var(--shiki-dark-font-weight) !important;
          text-decoration: var(--shiki-dark-text-decoration) !important;
        }
      }
    }
  }
</style>
