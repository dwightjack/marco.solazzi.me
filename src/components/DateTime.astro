---
import { toIso, toFormattedDate } from '../shared/dateTime';

export interface Props {
  datetime: string | Date;
  dateFormat?: 'short' | 'long';
}

const { datetime, dateFormat } = Astro.props;
---

<time datetime={toIso(datetime)}
  >{toFormattedDate(datetime, dateFormat === 'long')}</time
>
