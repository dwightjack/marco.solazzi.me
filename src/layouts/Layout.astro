---
const socialImageURL = new URL('/marco-og.jpg', Astro.url);
const { default: iconHTML } = await import(`../assets/images/icons.svg?raw`);
---

<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Marco Solazzi - Frontend Web Developer</title>
    <meta
      name="description"
      content="Personal Website of Marco Solazzi - Frontend Web Developer"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="format-detection" content="telephone=no" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="theme-color" content="#ffffff" />
    <meta
      property="og:title"
      content="Marco Solazzi - Frontend Web Developer"
    />
    <meta
      property="og:description"
      content="Personal Website of Marco Solazzi - Frontend Web Developer"
    />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:url" content="http://marco.solazzi.me/" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bree+Serif&family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <Fragment set:html={iconHTML} />
    <slot />
  </body>
</html>
