{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "commonjs": true,
    "es6": true,
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "config/webpack.base.js"
      }
    }
  },
  "globals": {
    "Modernizr": true,
    "__PRODUCTION__": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": false
    }
  },
  "rules": {
    "indent": [
      2,
      4
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 3
      }
    ],
    "spaced-comment": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "eol-last": 0,
    "padded-blocks": [
      1,
      {
        "classes": "always"
      }
    ],
    "max-len": 0,
    "no-underscore-dangle": 0,
    "arrow-parens": 0,
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "[a-z]+.s?css$"
        ]
      }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "vue": "never"
      }
    ]
  },
  "plugins": [
    "html"
  ]
}